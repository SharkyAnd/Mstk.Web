<div class="modal fade" data-bind="validationOptions: { errorClass: 'has-error', errorElementClass: 'has-error', insertMessages: false }">
    <div class="modal-dialog" data-bind="css: { 'modal-lg': width == DialogWidth.Large, 'modal-sm': width == DialogWidth.Small }">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-bind="click: cancel, enable: !isBusy()"><span aria-hidden="true">&times;</span><span class="sr-only">Закрыть</span></button>
                <h4 class="modal-title" data-bind="text: name"></h4>
            </div>
            <div class="modal-body" style="max-height: 600px; overflow-y: auto; overflow-x: hidden">
                <!-- ko template: { name: dataTemplate, data: data } --><!-- /ko -->

                <!-- ko if: isBusy -->
                <!-- ko template: 'shared/loadingPanel' --><!-- /ko -->
                <!-- /ko -->
            </div>
            <div class="modal-footer">
                <button type="button" style="width:120px" class="btn btn-default" data-bind="click: cancel, enable: !isBusy()">Закрыть</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
